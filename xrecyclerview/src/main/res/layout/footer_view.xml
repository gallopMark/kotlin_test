<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemDivider"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/margin_size_20">

    <ImageView
        android:id="@+id/ic_loading"
        android:layout_width="@dimen/margin_size_30"
        android:layout_height="@dimen/margin_size_30"
        android:layout_gravity="center"
        android:src="@drawable/anim_loading"
        android:layout_marginRight="@dimen/margin_size_10" />

    <TextView
        android:id="@+id/tv_footer_statu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/xrecyclerview_footer_loading"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>