<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_loading_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <com.haoyuinfo.library.widget.CircularProgressView
            android:id="@+id/cpvLoading"
            android:layout_width="@dimen/margin_size_30"
            android:layout_height="@dimen/margin_size_30"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_size_20"
            app:border_Width="@dimen/margin_size_3"
            app:minSweepAngle="60" />

        <TextView
            android:id="@+id/mLoadingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</FrameLayout>