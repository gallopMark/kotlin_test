<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.haoyuinfo.library.widget.CircularProgressView
            android:id="@+id/cpvLoading"
            android:layout_width="@dimen/margin_size_22"
            android:layout_height="@dimen/margin_size_22"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_size_12"
            android:layout_marginRight="@dimen/margin_size_12"
            app:border_Width="@dimen/margin_size_3"
            app:minSweepAngle="60" />

        <TextView
            android:id="@+id/mLoadingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/loading"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>
</FrameLayout>