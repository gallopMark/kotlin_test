<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/material_card"
    android:minWidth="280dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20"
        android:paddingLeft="@dimen/margin_size_20"
        android:paddingRight="@dimen/margin_size_20"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_20" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_16"
        android:gravity="left|top"
        android:lineSpacingExtra="@dimen/margin_size_2"
        android:minHeight="@dimen/margin_size_50"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/margin_size_20"
        android:paddingRight="@dimen/margin_size_20"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:textColor="@color/blow_gray"
        android:textSize="@dimen/font_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_10">

        <TextView
            android:id="@+id/tv_neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/material_button_selector"
            android:paddingBottom="@dimen/margin_size_6"
            android:paddingLeft="@dimen/margin_size_12"
            android:paddingRight="@dimen/margin_size_12"
            android:paddingTop="@dimen/margin_size_6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button_selector"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingLeft="@dimen/margin_size_12"
                android:paddingRight="@dimen/margin_size_12"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_makesure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:background="@drawable/material_button_selector"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingLeft="@dimen/margin_size_12"
                android:paddingRight="@dimen/margin_size_12"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/determine"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>