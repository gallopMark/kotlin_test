<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/AppToolBarStyle">

        <TextView style="@style/ToolbarTitleTextView" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/margin_size_6">

            <RadioButton
                android:id="@+id/rbLearn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/learn"
                android:textColor="@color/course_tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rbResource"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/resources"
                android:textColor="@color/course_tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rbDiscuss"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/discuss"
                android:textColor="@color/course_tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rbQuestion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/questions"
                android:textColor="@color/course_tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

            <RadioButton
                android:id="@+id/rbProgress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/course_tab_selector"
                android:button="@color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_size_6"
                android:paddingTop="@dimen/margin_size_6"
                android:text="@string/progress"
                android:textColor="@color/course_tab_textcolor_selector"
                android:textSize="@dimen/font_size_16" />

        </RadioGroup>

        <TextView
            android:id="@+id/bt_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_size_6"
            android:paddingLeft="@dimen/margin_size_12"
            android:paddingRight="@dimen/margin_size_12"
            android:paddingTop="@dimen/margin_size_6"
            android:text="@string/download"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:background="@color/itemDivider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>