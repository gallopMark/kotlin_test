<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flSelected"
    android:layout_width="@dimen/margin_size_50"
    android:layout_height="@dimen/margin_size_50"
    android:layout_marginLeft="@dimen/margin_size_12"
    android:background="@drawable/image_selected"
    android:padding="@dimen/margin_size_2">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/flUnCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitetransparent" />
</FrameLayout>

