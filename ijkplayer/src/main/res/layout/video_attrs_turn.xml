<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/translucent"
    android:gravity="center"
    android:minWidth="140dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_size_16">

    <ImageView
        android:id="@+id/ivAttrIco"
        android:layout_width="@dimen/margin_size_30"
        android:layout_height="@dimen/margin_size_30"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_volume_up_24dp" />

    <ProgressBar
        android:id="@+id/attrBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_4"
        android:layout_marginTop="@dimen/margin_size_14"
        android:progressDrawable="@drawable/progress_layer" />
</LinearLayout>